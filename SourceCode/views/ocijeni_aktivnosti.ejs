<%- include(`partials/header`); %>

<body class="content">

    <section class="section bg-secondary">
        <div class="container">
            <div class="centered-container">
                <div class="separator"></div>
            </div>
        </div>

        <% if (kampGotov) { %>
        <div class="container">
            <div class="jumbotron text-center">
                <h1 class="summary-title main-color-emphasized font-primary text-info">Moje neocijenjene aktivnosti</h1>
                <p class="lead"></p>
                <hr class="my-4"></hr>
        
                
                <div class="centered-container">
                    <% if (uloga === "s") { %>
                        <% if (unratedUserActivities.length > 0) { %>
                            <% for (let activity of unratedUserActivities) { %>
                            <table class="table table-stripped table-hover">
                                <form action="/ocijeni_aktivnosti/dojamaktivnosti" method="POST">
                                    <thead>
                                        <tr>
                                            <th scope="col">Naziv</th>
                                            <th scope="col">Opis</th>
                                            <th scope="col">Trajanje</th>
                                            <th scope="col">Ocjena</th>
                                            <th scope="col">Dojam</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <input type="text" name="nazivakt" value='<%= activity.ime %>' hidden>
                                            <td id="nazivakt" name="nazivakt"><%= activity.ime %></td>
                                            <td><%= activity.kratkiOpis %></td>
                                            <td><%= activity.trajanje %></td>
                                            <td>
                                                <select class="form-select" id="ocjena" name="ocjena">
                                                    <option value=1>1</option>
                                                    <option value=1>2</option>
                                                    <option value=1>3</option>
                                                    <option value=1>4</option>
                                                    <option value=1>5</option>
                                                    <option value=1>6</option>
                                                    <option value=1>7</option>
                                                    <option value=1>8</option>
                                                    <option value=1>9</option>
                                                    <option value=1>10</option>
                                                </select> <br>
                                            </td>
                                            <td>
                                                <textarea type="input" class="form-control" id="dojam" name="dojam" maxlength="2500" aria-describedby="dojamHelp"></textarea>
                                                <small id="dojamHelp" class="form-text text-muted">Maksimalna duljina je 250 riječi</small>
                                            </td>
                                            <td>
                                                <button type="submit" class="btn btn-danger">Submit</button>
                                            </form>
                                            </td>
                                        </tr>
                                    </tbody>
                                </form>
                            </table>
                            <br>
                            <br>
                            <% } %>  
                        <% } else { %>
                            <h3 class="summary-title main-color-emphasized font-primary">Sve aktivnosti su ocijenjene!</h1>
                        <% } %> 
                    <% } else { %>
                        <% if (unratedAnimatorActivities.length > 0) { %>
                            <% for (let activity of unratedAnimatorActivities) { %>
                            <table class="table table-stripped table-hover">
                                <form action="/ocijeni_aktivnosti/dojamaktivnosti" method="POST">
                                    <thead>
                                        <tr>
                                            <th scope="col">Naziv</th>
                                            <th scope="col">Opis</th>
                                            <th scope="col">Trajanje</th>
                                            <th scope="col">Ocjena</th>
                                            <th scope="col">Dojam</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <input type="text" name="nazivakt" value='<%= activity.ime %>' hidden>
                                            <td id="nazivakt" name="nazivakt"><%= activity.ime %></td>
                                            <td><%= activity.kratkiOpis %></td>
                                            <td><%= activity.trajanje %> sati</td>
                                            <td>
                                                <select class="form-select" id="ocjena" name="ocjena">
                                                    <option value=1>1</option>
                                                    <option value=1>2</option>
                                                    <option value=1>3</option>
                                                    <option value=1>4</option>
                                                    <option value=1>5</option>
                                                    <option value=1>6</option>
                                                    <option value=1>7</option>
                                                    <option value=1>8</option>
                                                    <option value=1>9</option>
                                                    <option value=1>10</option>
                                                </select> <br>
                                            </td>
                                            <td>
                                                <textarea type="input" class="form-control" id="dojam" name="dojam" maxlength="2500" aria-describedby="dojamHelp"></textarea>
                                                <small id="dojamHelp" class="form-text text-muted">Maksimalna duljina je 250 riječi</small>
                                            </td>
                                            <td>
                                                <button type="submit" class="btn btn-danger">Submit</button>
                                            </form>
                                            </td>
                                        </tr>
                                    </tbody>
                                </form>
                            </table>
                            <br>
                            <br>
                            <% } %>  
                        <% } else { %>
                            <h3 class="summary-title main-color-emphasized font-primary">Sve aktivnosti su ocijenjene!</h1>
                        <% } %>         
                    <% } %> 
                </div>
            </div>
        </div>
        <div class="container">
            <div class="centered-container">
                <div class="separator"></div>
            </div>
        </div>

        <div class="container">
            <div class="jumbotron text-center">
                <h1 class="summary-title main-color-emphasized font-primary text-info">Ukupan dojam</h1>
                <p class="lead"></p>
                <hr class="my-4"></hr>
        
                <div class="centered-container">
                    <% if (!ukupanDojamEntered) { %>
                        <table class="table table-stripped table-hover">
                            <form action="/ocijeni_aktivnosti/ukupandojam" method="POST">
                                <thead>
                                    <tr>
                                        <th scope="col">Ocjena</th>
                                        <th scope="col">Dojam</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            <select class="form-select" id="ocjena" name="ocjena">
                                                <option value=1>1</option>
                                                <option value=1>2</option>
                                                <option value=1>3</option>
                                                <option value=1>4</option>
                                                <option value=1>5</option>
                                                <option value=1>6</option>
                                                <option value=1>7</option>
                                                <option value=1>8</option>
                                                <option value=1>9</option>
                                                <option value=1>10</option>
                                            </select> <br>
                                        </td>
                                        <td>
                                            <textarea type="input" class="form-control" id="dojam" name="dojam" maxlength="2500" aria-describedby="dojamHelp"></textarea>
                                            <small id="dojamHelp" class="form-text text-muted">Maksimalna duljina je 250 riječi</small>
                                        </td>
                                        <td>
                                            <button type="submit" class="btn btn-danger">Submit</button>
                                        </form>
                                        </td>
                                    </tr>
                                </tbody>
                            </form>
                        </table>
                        <br>
                        <br>  
                    <% } else { %>
                        <h3 class="summary-title main-color-emphasized font-primary">Ukupan dojam je ocijenjen!</h1>
                    <% } %> 
                </div>
            </div>
        </div>
                
        <% } else {%> 
        <div class="container">
            <div class="jumbotron text-center">
                <h1 class="summary-title main-color-emphasized font-primary text-info">Kamp još nije gotov</h1>
                <p class="lead"></p>
                <hr class="my-4"></hr>
                <% } %> 
    </section>


</body>

<%- include(`partials/footer`); %>